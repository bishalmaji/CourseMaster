<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EarnFast" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/greenM</item>
        <item name="colorPrimaryVariant">@color/greenLight</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellowDark</item>
        <item name="colorSecondaryVariant">@color/yellowM</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/blue_green</item>
        <item name="android:textColor">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TransparentStatus" parent="Theme.EarnFast">
        <item name="android:statusBarColor">@color/transparent</item>
    </style>
</resources>